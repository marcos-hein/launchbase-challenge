{% extends "layout.njk" %}

{% block head %}
    <title>Conteúdos - Rocketseat</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"rel="stylesheet">
{% endblock%}

{% block content %}

        <section class="cards">

            <div class="card" id="starter">
                <div class="card_image-container">
                    <img src="http://app.rocketseat.com.br/static/media/Starter.64c237cc.svg" alt="Curso Starter">
                </div>
                <div class="card_content">
                    <p>
                       <strong>Torne-se um programador</strong> desejado no mercado de trabalho
                    </p>
                </div>
            </div>
            
            <div class="card" id="launchbase">
                <div class="card_image-container">
                    <img src="http://app.rocketseat.com.br/static/media/LaunchBase.08285320.svg" alt="Curso Launchbase">
                </div>
                <div class="card_content">
                    <p>
                        <strong>Domine programação do zero</strong> e tenha acesso às melhores oportunidades do mercado
                    </p>
                </div>
            </div>

            <div class="card" id="gostack">
                <div class="card_image-container">
                    <img src="http://app.rocketseat.com.br/static/media/GoStack.83a178a0.svg" alt="Curso GoStack">
                </div>
                <div class="card_content">
                    <p>
                        <strong>Treinamento imersivo</strong> nas tecnologias mais modernas do desenvolvimento web e mobile
                    </p>
                </div>
            </div>

        </section>

        <div class="modal-overlay">
            <div class="modal">
                <a class="close-modal">
                    <i class="material-icons">close</i>
                </a>
                <a class="maximize">
                    <i class="material-icons" id="fullscreen">fullscreen</i>
                </a>

                <div class="modal-content">
                    <iframe src="" frameborder="0"></iframe>
                </div>
            </div>
        </div>
        
        <script src="scripts.js"></script>

{% endblock %}