{% extends "layout.njk" %}

{% block content %}
    <div class="card show">
        <section class="avatar" style ="background: url({{ student.avatar_url }}) no-repeat center center / cover"></section>
        <section class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Nome</div>
                <div>{{ student.name }}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{ student.age }}</div>
            </div>

            <div class="item">
                <div>Escolaridade</div>
                <div>{{ student.schooling }}</div>
            </div>

            <div class="item">
                <div>Modalidade de ensino</div>
                <div>{{ student.type_of_class }}</div>
            </div>

            <div class="item">
                <div>Acompanhamento</div>
                <div>
                    {% for service in student.services %}
                        <span class="service">{{ service }}</span>
                    {% endfor %}
                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{ student.created_at }}</div>
            </div>

            <div class="button_show_page">

                <a href="/students/{{ student.id }}/edit" class="button button_show_page">Editar</a>

                <form id="form-delete" method="POST" action="/students?_method=DELETE">
                    <input 
                        type="hidden"
                        name="id"
                        value="{{ student.id }}"
                    >
                    <button class="button_show_page" type="submit">Deletar</button>
                </form>
            </div>
        </section>
    </div>
{% endblock content %}