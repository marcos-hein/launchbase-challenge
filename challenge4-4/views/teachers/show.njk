{% extends "layout.njk" %}

{% block content %}
    <div class="card">
        <section class="avatar" style ="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"></section>
        <section class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Nome</div>
                <div>{{ teacher.name }}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{ teacher.age }}</div>
            </div>

            <div class="item">
                <div>Escolaridade</div>
                <div>{{ teacher.schooling }}</div>
            </div>

            <div class="item">
                <div>Modalidade de ensino</div>
                <div>{{ teacher.type_of_class }}</div>
            </div>

            <div class="item">
                <div>Acompanhamento</div>
                <div>
                    {% for service in teacher.services %}
                        <span>{{ service }}</span>
                    {% endfor %}
                </div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{ teacher.created_at }}</div>
            </div>

            <a href="#" class="button">Editar</a>

        </section>
    </div>
{% endblock content %}