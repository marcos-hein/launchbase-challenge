 {% extends "layout.njk" %}

 {% block content %}

    <div class="card edit">
        <section
            class="avatar" 
            style ="background: url({{ teacher.avatar_url }}) no-repeat center center / cover">
        </section>

        <section class="details">
            <form method="POST" action="/teachers?_method=PUT">
                
                <h3>Novo Professor</h3>

                {% include 'teachers/fields.njk' %}

                <input 
                    type="hidden" 
                    name="id" 
                    value="{{ teacher.id }}"
                >

            </form>

            <form id="form-delete" method="POST" action="/teachers?_method=DELETE">
                    <input 
                        type="hidden"
                        name="id"
                        value="{{ teacher.id }}"
                    >
                    <button class="button_show_page" type="submit">Deletar</button>
            </form>

        </section>
    </div>

{% include '../confirm-delete.njk' %}

 {% endblock content %}
