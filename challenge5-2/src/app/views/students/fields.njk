<div class="item">
    <div>Avatar URL</div>
    <div>
        <input 
            type="url"
            name="avatar_url"
            placeholder="http://"
            value="{{ student.avatar_url }}"
        >
    </div>
</div>

<div class="item">
    <div>Nome</div>
    <div>
        <input 
            type="text"
            name="name"
            placeholder="Nome do estudante"
            value="{{ student.name }}"
        >
    </div>
</div>

<div class="item">
    <div>Email</div>
    <div>
        <input 
            type="email"
            name="email"
            placeholder="seuemail@email.com"
            value="{{ student.email }}"
        >
    </div>
</div>

<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input 
            type="date"
            name="birth_date"
            value="{{ student.birth_date }}"
        >
    </div>
</div>

<div class="item">
    <div>Ano escolar</div>
    <div>
        <select name="school_year">
            <option value="0">Selecione uma opção</option>
            <option value="1" {% if student.school_year == '1' %} selected{% endif %}>5º Ano do Ensino Fundamental</option>
            <option value="2" {% if student.school_year == '2' %} selected{% endif %}>6º Ano do Ensino Fundamental</option>
            <option value="3" {% if student.school_year == '3' %} selected{% endif %}>7º Ano do Ensino Fundamental</option>
            <option value="4" {% if student.school_year == '4' %} selected{% endif %}>8º Ano do Ensino Fundamental</option>
            <option value="5" {% if student.school_year == '5' %} selected{% endif %}>9º Ano do Ensino Fundamental</option>
            <option value="6" {% if student.school_year == '6' %} selected{% endif %}>1º Ano do Ensino Médio</option>
            <option value="7" {% if student.school_year == '7' %} selected{% endif %}>2º Ano do Ensino Médio</option>
            <option value="8" {% if student.school_year == '8' %} selected{% endif %}>3º Ano do Ensino Médio</option>
        </select>
    </div>
</div>

<div class="item">
    <div>Carga horária</div>
    <div>
        <input 
            type="number"
            name="study_hours"
            placeholder="Horas por semana"
            value="{{ student.study_hours }}"
        >
    </div>
</div>


<button type="submit">Salvar</button>
